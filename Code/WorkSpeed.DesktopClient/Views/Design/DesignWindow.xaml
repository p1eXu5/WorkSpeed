<Window x:Class="WorkSpeed.DesktopClient.Views.Design.DesignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkSpeed.DesktopClient.Views.Design"
        mc:Ignorable="d"
        Title="DesignWindow" Height="450" Width="800">

    <Grid Width="Auto" Height="Auto" Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" >
            <ScrollViewer MinHeight="200" >
                <DataGrid ItemsSource="{Binding Source={StaticResource EmployeeCollection}}"
                      VerticalAlignment="Top"
                      >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код" 
                                    Width="80" 
                                    Binding="{Binding Id}"
                                    CanUserResize="False"
                                    CellStyle="{StaticResource st_CenteredCell}"
                                    IsReadOnly="True"
                                    />
                        <DataGridComboBoxColumn Header="Должность" 
                                        ItemsSource="{Binding Source={StaticResource Appointments}}"     
                                        SelectedItemBinding="{Binding Appointment}"
                                        DisplayMemberPath="InnerName"
                                        MinWidth="180"
                                        IsReadOnly="False" 
                                        />
                        <DataGridTextColumn Header="Сотрудник"  
                                    MinWidth="240"
                                    Binding="{Binding Name}" 
                                    CellStyle="{StaticResource st_VerticalCenteredCell}"
                                    IsReadOnly="True"
                                    />
                        <DataGridTemplateColumn Header="Работает" 
                                        Width="70"
                                        CellTemplate="{StaticResource dt_IsActive}"
                                        CellStyle="{StaticResource st_CenteredCell}"
                                        CanUserSort="True"
                                        SortMemberPath="IsActive"
                                        />
                        <DataGridComboBoxColumn Header="Зона ответственности"
                                        ItemsSource="{Binding Source={StaticResource Positions}}"     
                                        SelectedItemBinding="{Binding Appointment}"
                                        DisplayMemberPath="InnerName"
                                        MinWidth="180" 
                                        IsReadOnly="False" 
                                        />
                        <DataGridComboBoxColumn Header="Ранг" 
                                        ItemsSource="{Binding Source={StaticResource Ranks}}"     
                                        SelectedItemBinding="{Binding Rank}"
                                        DisplayMemberPath="InnerName"
                                        MinWidth="180" 
                                        IsReadOnly="False" 
                                        />
                        <DataGridTemplateColumn Header="Курит" Width="70"
                                        CellTemplate="{StaticResource dt_IsSmoker}"
                                        CellStyle="{StaticResource st_CenteredCell}"
                                        CanUserSort="True"
                                        SortMemberPath="IsSmoker"
                                        />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Content="Выход" Width="80" Height="26"
                        Command="{Binding BackwardCommand}"
                        HorizontalAlignment="Left"
                        Margin="80,0"
                        />

                <Button Grid.Column="1" Content="Далее" Width="80" Height="26"
                        Command="{Binding ForwardCommand}"
                        HorizontalAlignment="Right"
                        Margin="80,0"
                        />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
