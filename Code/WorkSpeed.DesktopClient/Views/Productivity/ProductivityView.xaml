<Grid x:Class="WorkSpeed.DesktopClient.Views.Productivity.ProductivityView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkSpeed.DesktopClient.Views.Productivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="116" Width="94"
      SnapsToDevicePixels="True"
      >
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="22" />
    </Grid.RowDefinitions>

    <CircleDiagramControl BorderThickness="0,0,1,1" 
                          BorderBrush="Black" 
                          ItemsSource="{Binding Aspects, Mode=OneWay}"
                          Annotation="{Binding Annotation}"
                          />

    <Border Grid.Row="1" BorderThickness="0,0,1,1" BorderBrush="Black">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            <Run Text="{Binding Speed, Mode=OneWay}" /> <Run Text="{Binding SpeedLabeling, Mode=OneWay}" />
        </TextBlock>
    </Border>

</Grid>
