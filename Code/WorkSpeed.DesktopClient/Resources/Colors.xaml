<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    
    <!-- MainWindow -->
    <Color x:Key="col_MainWindow.Background">#f2f2f4</Color>
    <Color x:Key="col_MainWindow.BackgroundAlternative">#294966</Color>

    <Color x:Key="col_MainWindow.Foreground">#a2bddb</Color>
    <Color x:Key="col_MainWindow.ForegroundAlternative">#1780ac</Color>
    <Color x:Key="col_MainWindow.ForegroundLight">#c6cdda</Color>

    <SolidColorBrush x:Key="br_MainWindow.Background" Color="{StaticResource col_MainWindow.Background}" />
    <SolidColorBrush x:Key="br_MainWindow.BackgroundAlternative" Color="{StaticResource col_MainWindow.BackgroundAlternative}" />
    <SolidColorBrush x:Key="br_MainWindow.Foreground" Color="{StaticResource col_MainWindow.Foreground}" />
    <SolidColorBrush x:Key="br_MainWindow.ForegroundAlternative" Color="{StaticResource col_MainWindow.ForegroundAlternative}" />

    <SolidColorBrush x:Key="brd_MainWindow.ForegroundAlternative" Color="{DynamicResource col_MainWindow.ForegroundAlternative}" />

</ResourceDictionary>